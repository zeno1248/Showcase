@{
    ViewBag.Title = "Showcase";
}
<h3>@ViewBag.Message</h3>

<p>Would show a list of projects.</p>
<div ng-app="myApp" ng-controller="myCtrl" id="DemoDiv">

    First Name: <input type="text" ng-model="firstName"><br>
    Last Name: <input type="text" ng-model="lastName"><br>
    <br>
    <div ng-click="showCars()">Show car list</div>

    <div ng-if="showCarsList">
    <table class="table table-hover">
      <thead>
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Color</th>
        </tr>
     </thead>
     <tbody>
        <tr ng-repeat="x in cars">
            <td>{{ x.Brand }}</td>
            <td>{{ x.Model }}</td>
            <td>{{ x.Color }}</td>
        </tr>
     </tbody>
    </table>
    </div>
    <br />
    <button ng-click="getCalendarEvents()">Show Calendar Event</button>
    <div ng-if="showCalendarEvents">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="x in events">
                    <td>{{ x.Title }}</td>
                    <td>{{ x.StartTime }}</td>
                    <td>{{ x.EndTime }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <br />
    <button ng-click="updateCalendar()">Update my Google Calendar</button>
</div>
